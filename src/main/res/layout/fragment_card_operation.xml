<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	style="@style/FullParentLayout">

	<LinearLayout
		style="@style/FormLayout">

		<EditText
			android:id="@+id/edit_front_side_text"
			android:singleLine="true"
			android:inputType="text"
			android:hint="@string/hint_card_front_text"
			style="@style/FormLayoutFirstItem" />

		<EditText
			android:id="@+id/edit_back_side_text"
			android:singleLine="true"
			android:inputType="text"
			android:hint="@string/hint_card_back_text"
			android:imeOptions="actionDone"
			style="@style/FormLayoutNotFirstItem" />

	</LinearLayout>

</ScrollView>