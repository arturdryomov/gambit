<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<ListView
		android:id="@android:id/list"
		android:choiceMode="multipleChoiceModal"
		android:fastScrollEnabled="true"
		android:scrollbarStyle="outsideOverlay"
		android:paddingLeft="@dimen/padding_list"
		android:paddingRight="@dimen/padding_list"
		android:layout_width="match_parent"
		android:layout_height="match_parent"/>

	<LinearLayout
		android:id="@+id/layout_message"
		android:visibility="gone"
		android:orientation="vertical"
		android:paddingLeft="@dimen/padding_message"
		android:paddingRight="@dimen/padding_message"
		android:gravity="center"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<TextView
			android:id="@+id/text_message_title"
			android:textSize="@dimen/text_message_title"
			android:textStyle="bold"
			android:gravity="center_horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"/>

		<TextView
			android:id="@+id/text_message_summary"
			android:textSize="@dimen/text_message_summary"
			android:textStyle="italic"
			android:paddingTop="@dimen/padding_message_summary"
			android:gravity="center_horizontal"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>

	</LinearLayout>

</FrameLayout>