<resources>

	<style name="Theme.Gambit" parent="@android:style/Theme.Holo.Light.DarkActionBar">
		<item name="android:actionBarStyle">@style/Theme.Gambit.ActionBar</item>
	</style>

	<style name="Theme.Gambit.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
		<item name="android:background">@color/background_action_bar</item>
		<item name="android:displayOptions">showTitle|showHome|homeAsUp</item>
	</style>

	<style name="Theme.Gambit.Home" parent="Theme.Gambit">
		<item name="android:actionBarStyle">@style/Theme.Gambit.Home.ActionBar</item>
	</style>

	<style name="Theme.Gambit.Home.ActionBar" parent="Theme.Gambit.ActionBar">
		<item name="android:displayOptions">showTitle</item>
	</style>

	<style name="Theme.Gambit.CardsPager" parent="Theme.Gambit">
		<item name="android:actionBarStyle">@style/Theme.Gambit.CardsPager.ActionBar</item>

		<!-- Change background color -->
		<item name="android:colorBackground">@color/background_card_container</item>
		<item name="android:colorBackgroundCacheHint">@color/background_card_container</item>
		<item name="android:windowBackground">@color/background_card_container</item>
	</style>

	<style name="Theme.Gambit.CardsPager.ActionBar" parent="Theme.Gambit.ActionBar">
		<item name="android:displayOptions">showHome|homeAsUp</item>
	</style>

	<style name="Theme.Gambit.Operation" parent="Theme.Gambit">
		<item name="android:actionBarStyle">@style/Theme.Gambit.Operation.ActionBar</item>
	</style>

	<style name="Theme.Gambit.Operation.ActionBar" parent="Theme.Gambit.ActionBar">
		<item name="android:displayOptions">showCustom</item>
	</style>

</resources>
